Description:
duplocale() function: duplicate a locale object.

Files:
lib/duplocale.c
m4/duplocale.m4

Depends-on:
locale
setlocale-null  [test $REPLACE_DUPLOCALE = 1]

configure.ac:
gl_FUNC_DUPLOCALE
gl_CONDITIONAL([GL_COND_OBJ_DUPLOCALE], [test $REPLACE_DUPLOCALE = 1])
AM_COND_IF([GL_COND_OBJ_DUPLOCALE], [
  gl_PREREQ_DUPLOCALE
])
gl_LOCALE_MODULE_INDICATOR([duplocale])

Makefile.am:
if GL_COND_OBJ_DUPLOCALE
lib_SOURCES += duplocale.c
endif

Include:
<locale.h>

Link:
$(DUPLOCALE_LIB)

License:
LGPL

Maintainer:
all
