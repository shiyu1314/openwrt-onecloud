Depends-on:

configure.ac:
AC_REQUIRE([AC_CANONICAL_HOST])
gl_CONDITIONAL([GL_COND_OBJ_WINDOWS_MUTEX],
               [case "$host_os" in mingw*) true;; *) false;; esac])

Makefile.am:
if GL_COND_OBJ_WINDOWS_MUTEX
lib_SOURCES += windows-mutex.c
endif

Include:
"windows-mutex.h"

