Description:
truncf() function: round towards zero.

Files:
lib/truncf.c
lib/trunc.c
m4/truncf.m4

Depends-on:
math
extensions
float           [test $HAVE_DECL_TRUNCF = 0 || test $REPLACE_TRUNCF = 1]

configure.ac:
gl_FUNC_TRUNCF
gl_CONDITIONAL([GL_COND_OBJ_TRUNCF],
               [test $HAVE_DECL_TRUNCF = 0 || test $REPLACE_TRUNCF = 1])
gl_MATH_MODULE_INDICATOR([truncf])

Makefile.am:
if GL_COND_OBJ_TRUNCF
lib_SOURCES += truncf.c
endif

Include:
<math.h>

Link:
$(TRUNCF_LIBM)

