configure.ac:
gl_FUNC_MEMSET_EXPLICIT
gl_CONDITIONAL([GL_COND_OBJ_MEMSET_EXPLICIT], [test $HAVE_MEMSET_EXPLICIT = 0])
AM_COND_IF([GL_COND_OBJ_MEMSET_EXPLICIT], [
  gl_PREREQ_MEMSET_EXPLICIT
])
gl_STRING_MODULE_INDICATOR([memset_explicit])

Makefile.am:
